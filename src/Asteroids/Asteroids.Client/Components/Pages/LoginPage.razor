@page "/login"
@using Asteroids.Client.Services
@using Microsoft.AspNetCore.SignalR.Client
@inject NavigationManager Navigation
@inject IToastService ToastService
@inject SessionService SessionService;

<h3>Login</h3>

<div class="form-group my-2">
    <label for="username">Username:</label>
    <input id="username" class="form-control" @bind-value="@username" @bind-value:event="oninput"  style="max-width:300px" />
</div>

<div class="form-group my-2">
    <label for="password">Password:</label>
    <input id="password" type="password" class="form-control" @bind-value="@password" @bind-value:event="oninput" style="max-width:300px" />
</div>

<p>Don't have an account? <a href="/createaccount">Create Account</a></p>

<button class="btn btn-primary my-2" @onclick="Login" disabled=@(string.IsNullOrEmpty(username) || string.IsNullOrEmpty(password))>
    Login
</button>

