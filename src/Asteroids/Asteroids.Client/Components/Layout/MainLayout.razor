@inherits LayoutComponentBase
@inject SessionService SessionService
@inject NavigationManager Navigation

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
                <button class="btn btn-link" @onclick="@(() => Navigation.NavigateTo("/login"))">Login</button>
                <button class="btn btn-link" @onclick="@(() => Navigation.NavigateTo("/createaccount"))">Create Account</button>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<BlazoredToasts Position="Blazored.Toast.Configuration.ToastPosition.TopCenter" />

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
