@inherits LayoutComponentBase
@inject SessionService SessionService
@inject NavigationManager Navigation

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            @if (loginVisible)
            {
                <button class="btn btn-link" @onclick="@(() => Navigation.NavigateTo("/login"))">Login</button>
                <button class="btn btn-link" @onclick="@(() => Navigation.NavigateTo("/createaccount"))">Create Account</button>
            }
            else
            {
                <button class="btn btn-link" @onclick="Logout">Logout</button>
            }
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<BlazoredToasts Position="Blazored.Toast.Configuration.ToastPosition.TopCenter" />

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool loginVisible = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        var sessionExists = await SessionService.SessionExists();
        loginVisible = !sessionExists;
    }

private async Task Logout()
    {
        await SessionService.ClearSession();
        Navigation.NavigateTo("/login");
    }
}
